extends ../layout

block content  
    br

    h1 Actualizar Usuario
    
    br
    br

    form(action=`/usuarios/${usuario.id}/update`, method='post')
     .form-group
      label(for='nombre') Nombre:
      input#nombre.form-control(type='text', name='nombre' value=usuario.nombre class=error.nombre ? 'is-invalid': '')
      if errors.nombre 
       small#nombreHelp.text-danger
        = error.nombre.message
      br
      br
      input.btn.btn-primary(type='submit' value='OK')
      br
      br
    a(href='/bicicletas') Volver
        