  style.
    .login-form {
    width: 340px;
    margin: 50px auto;
    font-size: 15px;
    }
    .login-form form {
    margin-bottom: 15px;
    background: #f7f7f7;
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    padding: 30px;
    }
    .login-form h2 {
    margin: 0 0 15px;
    }
    .form-control, .btn {
    min-height: 38px;
    border-radius: 2px;
    }
    .btn {
    font-size: 15px;
    font-weight: bold;
    }

.login-form
  form(action='/resetPassword' method='post')
    h4.text-center Ingresar
     .form-group
      input.form-control(type='password' placeholder='Nuevo Password' name='password' required='required')
     .form-group
      input.form-control(type='password' placeholder='Confirmar' name='confirm_password' required='required')  
     .form-group
      input.form-control(type='hidden' name='email' value=message.usuario.email)   
     .form-group
      button.btn.btn-primary.btn-block(type='submit') Enviar
     if message.error
      p.text-center
       small#errorHelp.text-danger 
        = message.error 