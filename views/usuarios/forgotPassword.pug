  style.
    .login-form {
    width: 340px;
    margin: 50px auto;
    font-size: 15px;
    }
    .login-form form {
    margin-bottom: 15px;
    background: #f7f7f7;
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    padding: 30px;
    }
    .login-form h2 {
    margin: 0 0 15px;
    }
    .form-control, .btn {
    min-height: 38px;
    border-radius: 2px;
    }
    .btn {
    font-size: 15px;
    font-weight: bold;
    }

.login-form
  form(action='/forgotPassword' method='post')
    h4.text-center Recuperar Password
    if !message.mail_ok
     .form-group
      input.form-control(type='text' placeholder='Email' name='email' required='required')
    if !message.mail_ok
     .form-group
      button.btn.btn-primary.btn-block(type='submit') Enviar
    if message.error
      p.text-center
       h10#errorHelp.text-danger 
        = message.error
    if message.sent_email
      p.text-center
       small#enviadoHelp.text-danger
        = message.sent_email
    if message.desc
      p.text-center
       h10.small.text-grey-50.mx-auto.mt-2.mb-5 
       = message.desc
    if message.mail_ok
     .clearfix
      a.float-right(href='/') Home